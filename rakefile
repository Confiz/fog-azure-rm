require 'rake/testtask'
task default: :it_coverage
task :test do
  ENV['COVERAGE'] = nil
  ENV['CODECLIMATE_REPO_TOKEN'] = nil
  Dir.glob('**/test_*.rb').each { |file| require File.expand_path file, __dir__ }
end

desc 'Generates a coverage report for minitest-cases using simple-cov'
task :coverage do
  ENV['CODECLIMATE_REPO_TOKEN'] = nil
  ENV['COVERAGE'] = 'true'
  Dir.glob('**/test_*.rb').each { |file| require File.expand_path file, __dir__ }
end

desc 'Generates a coverage report for minitest-cases using code-climate'
task :cc_coverage do
  ENV['COVERAGE'] = nil
  ENV['CODECLIMATE_REPO_TOKEN'] = 'b1401494baa004d90402414cb33a7fc6420fd3693e60c677a120ddefd7d84cfd'
  Dir.glob('**/test_*.rb').each { |file| require File.expand_path file, __dir__ }
end

desc 'Generates a coverage report for Integration test-cases using simple-cov'
task :it_coverage do
  ENV['CODECLIMATE_REPO_TOKEN'] = nil
  ENV['COVERAGE'] = 'true'
  Dir.glob('**/integration/**/test_*.rb').each { |file| require File.expand_path file, __dir__ }
end

